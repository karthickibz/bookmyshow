<!-- START PAGE-CONTAINER -->
  <div class="login-wrapper ">
    <!-- START Login Background Pic Wrapper-->
    <div class="bg-pic">
      <!-- START Background Pic-->
      <%=image_tag asset_path("sign-in-left-column.jpg"), "data-src" => asset_path("sign-in-left-column.jpg"), "data-src-retina" => asset_path("sign-in-left-column.jpg"), class: "lazy" %>
    
      <!-- END Background Pic-->
      <!-- START Background Caption-->
      <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
        <h2 class="semi-bold text-white">
        <!--Pages make it easy to enjoy what matters the most in the life</h2>-->
        <p class="small">
          <!--images Displayed are solely for representation purposes only, All work copyright of respective owner, otherwise Â© 2013-2014 REVOX.-->
        </p>
      </div>
      <!-- END Background Caption-->
    </div>
    <!-- END Login Background Pic Wrapper-->
    <!-- START Login Right Container-->
    <div class="login-container bg-white">
      <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
        <%=link_to root_path do %>
        <%=image_tag "celltoo-logo.png", "data-src-retina" => asset_path("celltoo-logo_no_bg.png"), height: "40", class: "img-responsive home-logo", width: "130" %>
        <%end%>
        <p class="p-t-35">Sign into your Celltoo account</p>
        <!-- START Login Form -->
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'p-t-15', role: 'form', remote: true, id: "form-login" }) do |f| %>
          <!-- START Form Control-->
          <div class="form-group form-group-default">
            <%= f.label :email, t('email_address') %>
            <div class="controls">
              <%= f.email_field :email, :autofocus => true, class: 'form-control', required: true %>
            </div>
          </div>
          <!-- END Form Control-->
          <!-- START Form Control-->
          <div class="form-group form-group-default">
            <%= f.label :password, t('password') %>
            <div class="controls">
              <%= f.password_field :password, class: 'form-control', required: true %>
            </div>
          </div>
          <!-- START Form Control-->
          <div class="row">
            <div class="col-md-6 no-padding">
              <div class="checkbox ">
                <%=f.check_box :remember_me %>
                <%=f.label :remember_me, t('remember_me') %>
              </div>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to t('forgot_your_password'), new_password_path(resource_name), class: "text-info small"%>
            </div>
            <div class="col-md-6 text-right">
              New member? <%= link_to t('click here'), new_user_registration_path(), class: "text-info small"%>
            </div>
          </div>
          <!-- END Form Control-->
          <%= f.submit ('sign_in'), :class => 'btn btn-primary btn-cons m-t-10'%>
        <% end %>
        <!--END Login Form-->   
    </div>
  <!-- END Login Right Container-->
</div>
<!-- END PAGE CONTAINER -->