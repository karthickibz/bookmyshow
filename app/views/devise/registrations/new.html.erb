<div class="container">    
  <div id="loginbox" style="margin-top:9%;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Create Account</div>
      </div>
      <div class="panel-body loginform">
         
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'p-t-15', role: 'form', :format => :js, id: "remote_signup_form" }) do |f| %>
          <%= devise_error_messages!.html_safe %>

          <div class="input-group main-content">
            <%=f.label :email, ('email_address') %>
                <%= f.email_field :email, :autofocus => true, class: 'form-control', required: true %>
          </div>

          <div class="input-group main-content">
            <%= f.label :Username  %>
            <%= f.text_field :username, class: 'form-control', required: true %>
          </div>

          <div class="input-group main-content">
            <%= f.label :password%>
                <%= f.password_field :password, class: 'form-control', required: true, :autocomplete => :off  %>
          </div>

          <div class="input-group main-content-center">
            <label>By Clicking on create account you are agreeing to the terms and conditions.</label>
          </div>

          <div class="input-group main-content-center">
            <%= f.submit "Create Account" ,:class => "btn btn-create"%>
          </div>

          <div class="input-group main-content-center">
            <%= link_to "Login", new_user_session_path, :class => 'login-link'  %>
          </div>

        <% end %>

      </div>
    </div>  
  </div>
</div>

