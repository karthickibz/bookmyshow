<div class="container">    
  	<div id="loginbox" style="margin-top:13%;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    	<div class="panel panel-info" >
	      <div class="panel-heading">
	        <div class="panel-title">Forget Password</div>
	      </div>
	      	<div class="panel-body loginform" >
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages!.html_safe %>

				  <div class="input-group main-content">
				    <%= f.label :email %><br />
				    <%= f.email_field :email, autofocus: true ,:class => "form-control" %>
				  </div>

				  <div class="input-group main-content-center">
				    <%= f.submit "Submit", :class => "btn btn-forget" %>
				  </div>
				<% end %>

			</div>                     
    	</div>  
  	</div>
</div>
